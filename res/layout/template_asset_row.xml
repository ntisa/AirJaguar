<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/image_0"
            android:layout_width="45dp"
            android:layout_height="45dp" />

        <ImageView
            android:id="@+id/image_1"
            android:layout_width="45dp"
            android:layout_height="45dp" />

        <ImageView
            android:id="@+id/image_2"
            android:layout_width="45dp"
            android:layout_height="45dp" />

        <ImageView
            android:id="@+id/image_3"
            android:layout_width="45dp"
            android:layout_height="45dp" />

        <ImageView
            android:id="@+id/image_4"
            android:layout_width="45dp"
            android:layout_height="45dp" />

        <ImageView
            android:id="@+id/image_5"
            android:layout_width="45dp"
            android:layout_height="45dp" />

        <ImageView
            android:id="@+id/image_6"
            android:layout_width="45dp"
            android:layout_height="45dp" />

        <ImageView
            android:id="@+id/image_7"
            android:layout_width="45dp"
            android:layout_height="45dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/object_0"
            android:layout_width="45dp"
            android:layout_height="45dp" />

        <ImageView
            android:id="@+id/object_1"
            android:layout_width="45dp"
            android:layout_height="45dp" />

        <ImageView
            android:id="@+id/object_2"
            android:layout_width="45dp"
            android:layout_height="45dp" />

        <ImageView
            android:id="@+id/object_3"
            android:layout_width="45dp"
            android:layout_height="45dp" />

        <ImageView
            android:id="@+id/object_4"
            android:layout_width="45dp"
            android:layout_height="45dp" />

        <ImageView
            android:id="@+id/object_5"
            android:layout_width="45dp"
            android:layout_height="45dp" />

        <ImageView
            android:id="@+id/object_6"
            android:layout_width="45dp"
            android:layout_height="45dp" />

        <ImageView
            android:id="@+id/object_7"
            android:layout_width="45dp"
            android:layout_height="45dp" />
    </LinearLayout>

</FrameLayout>